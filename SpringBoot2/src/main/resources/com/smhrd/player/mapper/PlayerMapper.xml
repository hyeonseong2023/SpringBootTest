<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smhrd.player.mapper.PlayerMapper">
	<select id="PlayerList"
		resultType="com.smhrd.player.entity.Player">
		select * from player
	</select>

	<select id="PlayerDetail" parameterType="String"
		resultType="com.smhrd.player.entity.Player">
		select * from player where name=#{name};
	</select>
</mapper>